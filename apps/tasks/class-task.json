{ "class": "class",
  "name": "task",
  "super": "object",
  "properties": [
    { "name": "createdAt",
      "propertyKind": "dateTimeStamp"
    },
    { "name": "updatedAt",
      "propertyKind": "dateTimeStamp",
      "defaultValueExpr": "o.createdAt"
    },
    { "name": "ident",
      "propertyKind": "docId",
      "defaultValueExpr": "c.name + '-' + o.createdAt.replace(/[^0-9]/g, '') + Math.round(Math.random() * 10000)"
    },
    { "name": "title",
      "propertyKind": "string"
    },
    { "name": "status",
      "propertyKind": "taskStatus",
      "defaultValue": "new",
      "valueChoices": [
        "new", "open", "resolved", "closed"
      ]
    },
    { "name": "description",
      "propertyKind": "text"
    },
    { "class": "propertyArray",
      "name": "messages",
      "propertyKind": "taskMessage"
    }
  ]
}
