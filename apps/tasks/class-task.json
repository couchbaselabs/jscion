{ "class": "class",
  "name": "task",
  "super": "object",
  "properties": [
    { "name": "createdAt",
      "propertyKind": "dateTimeStamp"
    },
    { "name": "updatedAt",
      "propertyKind": "dateTimeStamp",
      "defaultValueExpr": "o.createdAt"
    },
    { "name": "ident",
      "propertyKind": "docIdGen"
    },
    { "name": "title",
      "propertyKind": "string",
      "validateExpr": "validateNonEmptyString"
    },
    { "name": "status",
      "propertyKind": "taskStatus",
      "defaultValue": "new",
      "valueChoices": [
        "new", "open", "resolved", "closed"
      ]
    },
    { "name": "description",
      "propertyKind": "text"
    },
    { "class": "propertyArray",
      "name": "messages",
      "propertyKind": "taskMessage"
    }
  ]
}
