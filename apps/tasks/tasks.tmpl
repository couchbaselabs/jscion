{{>main_header}}

{{# !obj || obj.class == "task" || obj.class == "app" }}
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="lhs">
        <h3>tasks</h3>

        <div class="search">
          <input type="text" class="search-query" value={{search}} placeholder="Search"/>
        </div>

        <div class="pane">
          <div class="tasks">
            {{#statusChoices}}
              {{# (tasksByStatus(.) || []).length > 0 }}
                {{.}} <span class="badge">{{(tasksByStatus(.) || []).length}}</span>
                <ul>
                  {{# tasksByStatus(.) }}
                    <li intro="fade:slow" class="{{ .ident == obj.ident ? 'current' : '' }}">
                      <a href="#{{.ident}}">{{.title}}</a>
                    </li>
                  {{/ tasksByStatus(.) }}
                </ul>
              {{/ (tasksByStatus(.) || []).length > 0 }}
            {{/statusChoices}}
          </div>
        </div>
      </div>
    </div>
    <div class="span7">
      <div class="rhs">
        <input on-change="newTask" class="newTask" placeholder="what needs to be done or fixed?"/>

        {{#obj}}
          {{# .class == "task" }}
            {{>taskPanel}}
          {{/ .class == "task" }}
        {{/obj}}
      </div>
    </div>
  </div>
</div>
{{/}}

{{# obj && obj.class != "task" && obj.class != "app" }}
  <div class="main">
    {{#obj}}{{>__object}}{{/obj}}
  </div>
{{/}}

{{>main_footer}}
